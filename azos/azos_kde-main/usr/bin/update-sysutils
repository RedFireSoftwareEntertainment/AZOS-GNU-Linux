#!/bin/bash

# Licenced under the GNU GPL 3.0
# Part of AZOS GNU/Linux and all legal information from this legal page apply here: https://sites.google.com/view/azosofficialsite/legal

# RedKit
cd /home/$USER/
git clone https://github.com/RedFireSoftwareEntertainment/RedKit.git
cd RedKit
cp updateredkit.sh /home/$USER/
cd /home/$USER/
sudo rm -rf RedKit
sudo chmod +x updateredkit.sh 
./updateredkit.sh
sudo rm updateredkit.sh

# OpenLOB 
cd /home/$USER/
git clone https://github.com/RedFireSoftwareEntertainment/OpenLOB.git
cd OpenLOB
sudo chmod +x openlob
sudo cp openlob /usr/bin
cd /home/$USER/
sudo rm -rf OpenLOB

# Patches/Updates
cd /home/$USER/
git clone https://github.com/RedFireSoftwareEntertainment/azosgnulinuxupdates.git
cd azosgnulinuxupdates
cp azosgnulinuxupdate.sh /home/$USER/
cd /home/$USER/
sudo rm -rf azosgnulinuxupdates
sudo chmod +x azosgnulinuxupdate.sh
./azosgnulinuxupdate.sh
sudo rm azosgnulinuxupdate.sh

echo "Finished"
